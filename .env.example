# IMAP connection
IMAP_SERVER=imap.mailprovider.com
IMAP_PORT=993
IMAP_TIMEOUT=30

# Telegram bot
TELEGRAM_BOT_TOKEN=123456:ABCDEF

# Polling behaviour (seconds)
CHECK_INTERVAL=300
MAX_BODY_CHARS=700
PROCESSED_RETENTION_DAYS=14

# Parse emails since this date (YYYY-MM-DD). Leave empty for "last 1 day".
START_DATE=2026-01-01

# Company mailboxes (same order for all list-based vars)
EMAILS=billing@company1.com,billing@company2.com
PASSWORDS=mailbox_password_1,mailbox_password_2
COMPANY_NAMES=Company One,Company Two

# Telegram destinations (same order as companies)
# Format: chat_id OR chat_id:topic_id
# Example with forum topics in supergroup:
TELEGRAM_CHAT_IDS=-1001111111111:15,-1002222222222:20

# Who to tag in each company alert (+ as separator inside one company)
TELEGRAM_TAGS=finance_lead+cto,ops_manager

# Allowed sender filters per company (+ separator). Leave empty to allow all senders.
ALLOWED_SENDERS=no-reply@provider.com+billing@provider.com,alerts@provider2.com

# Extra per-company keywords (in addition to built-in ru/en dictionary)
COMPANY_KEYWORDS=invoice+overdue+платёж,balance+истекает
